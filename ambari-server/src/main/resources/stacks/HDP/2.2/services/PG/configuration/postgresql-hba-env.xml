<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration supports_final="true">

    <property>
        <name>postgresql.hba.local</name>
        <value>local	all	        all		                          trust</value>
        <description>This is trust conncet info for local</description>
    </property>
    <property>
        <name>postgresql.hba.ipv4</name>
        <value>host    all         all         0.0.0.0/0          trust</value>
