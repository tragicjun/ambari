<configuration>
    <property>
        <name>tube.user</name>
        <value>tube</value>
        <property-type>USER</property-type>
        <description></description>
    </property>

    <property>
        <name>tube.group</name>
        <value>tube</value>
        <property-type>GROUP</property-type>
        <final>true</final>
        <description></description>
    </property>

    <property>
        <name>zk.root</name>
        <value>tube</value>
        <description>Zookeeper上信息根目录</description>
    </property>

    <property>
        <name>master.listen.port</name>
        <value>9000</value>
        <description>master监听端口</description>
    </property>

    <property>
        <name>master.web.port</name>
        <value>9001</value>
        <description>master web控制台的访问端口</description>
    </property>

    <property>
        <name>topic.tool.port</name>
        <value>9002</value>
        <description>topic tool server启动端口</description>
    </property>

    <property>
        <name>topic.tool.timeval</name>
        <value>5</value>
        <description>topic tool client同步数据时间间隔</description>
    </property>

    <property>
        <name>consumer.balance.period</name>
        <value>10000</value>
        <description>reblance周期，默认10s</description>
    </property>

    <property>
        <name>first.balance.delay.after.start</name>
        <value>60000</value>
        <description>master启动后首次进行rebalance的时间，当集群规模较大时，请调大该值，默认60s</description>
    </property>

    <property>
        <name>consumer.heartbeat.timeout</name>
        <value>10000</value>
        <description>consumer心跳超时时间，默认10s</description>
    </property>

    <property>
        <name>producer.heartbeat.timeout</name>
        <value>10000</value>
        <description>producer跳超时时间，默认10s</description>
    </property>

    <property>
        <name>broker.heartbeat.timeout</name>
        <value>5000</value>
        <description>broker心跳超时时间，默认5s</description>
    </property>

</configuration>
