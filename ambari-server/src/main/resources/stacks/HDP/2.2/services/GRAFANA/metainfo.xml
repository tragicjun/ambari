<?xml version="1.0"?>
<metainfo>
  <schemaVersion>2.0</schemaVersion>
  <services>
    <service>
      <name>GRAFANA</name>
      <displayName>Grafana</displayName>
      <comment>Grafana Metrics Dashboard</comment>
      <version>2.6.0</version>
      <components>
        <component>
          <name>GRAFANA_SERVER</name>
          <displayName>grafana server</displayName>
          <category>MASTER</category>
          <cardinality>1</cardinality>
          <dependencies>
            <dependency>
              <name>MYSQL/MYSQLCLIENT</name>
              <scope>host</scope>
              <auto-deploy>
                <enabled>true</enabled>
              </auto-deploy>
            </dependency>
          </dependencies>
          <commandScript>
            <script>scripts/grafana_server.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>1200</timeout>
          </commandScript>
        </component>
      </components>

      <osSpecifics>
        <osSpecific>
          <osFamily>redhat5,redhat6,suse11</osFamily>
          <packages>
            <package>
              <name>grafana</name>
            </package>
          </packages>
        </osSpecific>
      </osSpecifics>
           
      <commandScript>
	    <script>scripts/service_check.py</script>
	    <scriptType>PYTHON</scriptType>
	    <timeout>300</timeout>
	  </commandScript>
	  
	  <requiredServices>
        <service>MYSQL</service>
      </requiredServices>

      <configuration-dependencies>
        <config-type>defaults</config-type>
      </configuration-dependencies>

    </service>
  </services>
</metainfo>
